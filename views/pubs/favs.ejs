<!-- lists information about a specific pub from user favorites-->
<h2> Your List</h2>

<!-- list of fav pubs by ID -->
<% user.pubs.forEach(pub =>{ %>
    <h3> <%= pub.name%></h3>
    <div>
      <%= pub.street%> <br>
      <%= pub.city%> <br>
      Website: <%= pub.website_url%> <br>
      Phone: <%= pub.phone %> <br>
      <a href ="/user_notes/comments"> <button> Add Comments </button> </a>
       <a href ="/user_notes/comments"> <button> Edit Comments </button> </a> 

      <form method="POST" action="/pubs/<%= pub.id %>/?_method=DELETE">
        <input type="submit" value="Delete">
      </form>

    </div>
   <% })%> 





